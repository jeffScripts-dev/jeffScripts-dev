local UILibrary = {}

-- Temas disponíveis
local Themes = {
    DarkTheme = {
        BackgroundColor = Color3.fromRGB(15, 15, 15),
        MainColor = Color3.fromRGB(30, 30, 30),
        AccentColor = Color3.fromRGB(100, 100, 100),
        TextColor = Color3.fromRGB(230, 230, 230),
        BorderColor = Color3.fromRGB(50, 50, 50),
    },
    BloodTheme = {
        BackgroundColor = Color3.fromRGB(25, 0, 0),
        MainColor = Color3.fromRGB(60, 0, 0),
        AccentColor = Color3.fromRGB(200, 20, 20),
        TextColor = Color3.fromRGB(255, 100, 100),
        BorderColor = Color3.fromRGB(100, 0, 0),
    },
    IceTheme = {
        BackgroundColor = Color3.fromRGB(10, 20, 40),
        MainColor = Color3.fromRGB(40, 70, 130),
        AccentColor = Color3.fromRGB(150, 200, 255),
        TextColor = Color3.fromRGB(200, 230, 255),
        BorderColor = Color3.fromRGB(70, 110, 160),
    }
}

-- Função para tornar um frame draggable via um dragger (top bar)
local function makeDraggable(frame, dragger)
    local dragging
    local dragInput
    local dragStart
    local startPos

    dragger.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position

            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)

    dragger.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)

    game:GetService("UserInputService").InputChanged:Connect(function(input)
        if input == dragInput and dragging then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(
                startPos.X.Scale,
                startPos.X.Offset + delta.X,
                startPos.Y.Scale,
                startPos.Y.Offset + delta.Y
            )
        end
    end)
end

-- Cria a janela principal
function UILibrary:CreateWindow(title)
    local Theme = Themes.DarkTheme -- Tema padrão

    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "DarkUILibrary"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = game:GetService("CoreGui")

    local mainFrame = Instance.new("Frame")
    mainFrame.Name = "MainFrame"
    mainFrame.Size = UDim2.new(0, 450, 0, 320)
    mainFrame.Position = UDim2.new(0.5, -225, 0.5, -160)
    mainFrame.BackgroundColor3 = Theme.BackgroundColor
    mainFrame.BorderColor3 = Theme.BorderColor
    mainFrame.Parent = screenGui
    mainFrame.Active = true

    -- TopBar (para arrastar e título)
    local topBar = Instance.new("Frame")
    topBar.Name = "TopBar"
    topBar.Size = UDim2.new(1, 0, 0, 30)
    topBar.BackgroundColor3 = Theme.MainColor
    topBar.BorderSizePixel = 0
    topBar.Parent = mainFrame

    -- Título
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "TitleLabel"
    titleLabel.Text = title or "Dark UI Library"
    titleLabel.Size = UDim2.new(1, -10, 1, 0)
    titleLabel.Position = UDim2.new(0, 10, 0, 0)
    titleLabel.BackgroundTransparency = 1
    titleLabel.TextColor3 = Theme.TextColor
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextSize = 18
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.Parent = topBar

    -- Botão trocar tema
    local themeButton = Instance.new("TextButton")
    themeButton.Name = "ThemeButton"
    themeButton.Size = UDim2.new(0, 100, 1, 0)
    themeButton.Position = UDim2.new(1, -105, 0, 0)
    themeButton.BackgroundColor3 = Theme.AccentColor
    themeButton.BorderSizePixel = 0
    themeButton.Text = "DarkTheme"
    themeButton.TextColor3 = Theme.TextColor
    themeButton.Font = Enum.Font.GothamBold
    themeButton.TextSize = 14
    themeButton.Parent = topBar

    -- Content Frame
    local contentFrame = Instance.new("Frame")
    contentFrame.Name = "ContentFrame"
    contentFrame.Size = UDim2.new(1, -20, 1, -50)
    contentFrame.Position = UDim2.new(0, 10, 0, 40)
    contentFrame.BackgroundColor3 = Theme.MainColor
    contentFrame.BorderSizePixel = 0
    contentFrame.Parent = mainFrame

    -- Função para aplicar tema
    local currentThemeName = "DarkTheme"
    function mainFrame:SetTheme(themeName)
        local t = Themes[themeName]
        if not t then return end
        currentThemeName = themeName
        mainFrame.BackgroundColor3 = t.BackgroundColor
        mainFrame.BorderColor3 = t.BorderColor
        topBar.BackgroundColor3 = t.MainColor
        titleLabel.TextColor3 = t.TextColor
        themeButton.BackgroundColor3 = t.AccentColor
        themeButton.TextColor3 = t.TextColor
        contentFrame.BackgroundColor3 = t.MainColor
        -- Atualiza textos e cores dos filhos do contentFrame (exemplo: botões)
        for _, child in pairs(contentFrame:GetChildren()) do
            if child:IsA("TextButton") then
                child.BackgroundColor3 = t.AccentColor
                child.TextColor3 = t.TextColor
            elseif child:IsA("TextLabel") then
                child.TextColor3 = t.TextColor
            elseif child:IsA("Frame") then
                child.BackgroundColor3 = t.MainColor
            end
        end
        themeButton.Text = themeName
    end

    -- Clica no botão pra trocar tema
    themeButton.MouseButton1Click:Connect(function()
        if currentThemeName == "DarkTheme" then
            mainFrame:SetTheme("BloodTheme")
        elseif currentThemeName == "BloodTheme" then
            mainFrame:SetTheme("IceTheme")
        else
            mainFrame:SetTheme("DarkTheme")
        end
    end)

    -- Faz draggable pelo topBar
    makeDraggable(mainFrame, topBar)

    -- Função para adicionar botão no contentFrame
    function mainFrame:AddButton(text, callback)
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(1, 0, 0, 35)
        button.BackgroundColor3 = Theme.AccentColor
        button.BorderSizePixel = 0
        button.Text = text or "Button"
        button.TextColor3 = Theme.TextColor
        button.Font = Enum.Font.GothamBold
        button.TextSize = 16
        button.Parent = contentFrame

        button.MouseButton1Click:Connect(function()
            if callback then
                callback()
            end
        end)

        -- Atualiza as cores do botão quando tema mudar
        local function updateButtonColors()
            local t = Themes[currentThemeName]
            button.BackgroundColor3 = t.AccentColor
            button.TextColor3 = t.TextColor
        end

        -- Gatilho pra atualizar cores quando mudar tema
        themeButton.MouseButton1Click:Connect(updateButtonColors)

        return button
    end

    -- Função para adicionar toggle no contentFrame
    function mainFrame:AddToggle(text, callback)
        local toggleFrame = Instance.new("Frame")
        toggleFrame.Size = UDim2.new(1, 0, 0, 35)
        toggleFrame.BackgroundTransparency = 1
        toggleFrame.Parent = contentFrame

        local label = Instance.new("TextLabel")
        label.Text = text or "Toggle"
        label.Size = UDim2.new(0.8, 0, 1, 0)
        label.BackgroundTransparency = 1
        label.TextColor3 = Theme.TextColor
        label.Font = Enum.Font.GothamBold
        label.TextSize = 16
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Parent = toggleFrame

        local toggleButton = Instance.new("TextButton")
        toggleButton.Size = UDim2.new(0.2, -5, 0.7, 0)
        toggleButton.Position = UDim2.new(0.8, 5, 0.15, 0)
        toggleButton.BackgroundColor3 = Theme.AccentColor
        toggleButton.BorderSizePixel = 0
        toggleButton.Text = "Off"
        toggleButton.TextColor3 = Theme.TextColor
        toggleButton.Font = Enum.Font.GothamBold
        toggleButton.TextSize = 14
        toggleButton.Parent = toggleFrame

        local toggled = false

        toggleButton.MouseButton1Click:Connect(function()
            toggled = not toggled
            toggleButton.Text = toggled and "On" or "Off"
            if callback then
                callback(toggled)
            end
        end)

        -- Atualiza cores quando tema mudar
        local function updateToggleColors()
            local t = Themes[currentThemeName]
            label.TextColor3 = t.TextColor
            toggleButton.BackgroundColor3 = t.AccentColor
            toggleButton.TextColor3 = t.TextColor
        end

        themeButton.MouseButton1Click:Connect(updateToggleColors)

        return toggleFrame
    end

    -- Aplica tema padrão
    mainFrame:SetTheme(currentThemeName)

    return mainFrame
end

return UILibrary
